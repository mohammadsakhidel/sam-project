<UserControl x:Class="SamUxLib.UserControls.PersianDateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamUxLib.UserControls"
             xmlns:persian="http://schemas.microsoft.com/wpf/2008/toolkit"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <persian:DatePicker x:Name="persianDatePicker" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                            Margin="{StaticResource padding_container_end}" />
        <toolkit:MaskedTextBox x:Name="tbTime" Mask="99:99" Width="50"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
    </StackPanel>
</UserControl>
