    <Thickness x:Key="padding_widget_ver">0 6</Thickness>
    <Thickness x:Key="padding_widget_hor">6 0</Thickness>
    <Thickness x:Key="padding_widget_top">0 6 0 0</Thickness>
    <Thickness x:Key="padding_widget_bottom">0 0 0 6</Thickness>
    <Thickness x:Key="padding_widget_start">6 0 0 0</Thickness>
    <Thickness x:Key="padding_widget_end">0 0 6 0</Thickness>
    <Thickness x:Key="padding_widget_hlf">3</Thickness>
    <Thickness x:Key="padding_widget_hlf_ver">0 3</Thickness>
    <Thickness x:Key="padding_widget_hlf_hor">3 0</Thickness>
    <Thickness x:Key="padding_action_button">5 5 10 5</Thickness>
    <Thickness x:Key="padding_small_action_button">5 2 10 2</Thickness>
    <Thickness x:Key="padding_textbox">3 1</Thickness>

    <GridLength x:Key="grid_row_spacing">8</GridLength>

</ResourceDictionary>