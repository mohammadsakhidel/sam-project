    <sys:Double x:Key="font_bit_smaller">11</sys:Double>
    <sys:Double x:Key="font_small">10</sys:Double>
    <sys:Double x:Key="font_tiny">9</sys:Double>

    <Thickness x:Key="padding_container">12</Thickness>
    <Thickness x:Key="padding_container_ver">0 12</Thickness>
    <Thickness x:Key="padding_container_hor">12 0</Thickness>
    <Thickness x:Key="padding_container_top">0 12 0 0</Thickness>
    <Thickness x:Key="padding_container_bottom">0 0 0 12</Thickness>
