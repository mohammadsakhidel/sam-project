                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="font_xlarge">20</sys:Double>
    <sys:Double x:Key="font_larger">17</sys:Double>
    <sys:Double x:Key="font_large">16</sys:Double>
    <sys:Double x:Key="font_bit_larger">14</sys:Double>
