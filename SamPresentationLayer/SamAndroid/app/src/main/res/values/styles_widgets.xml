<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.EditText" parent="Material.Widget.EditText.Light">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="et_supportMode">none</item>
        <item name="et_labelEnable">true</item>
        <item name="et_labelPadding">2dp</item>
        <item name="et_labelTextColor">@color/colorPrimary</item>
        <item name="et_dividerHeight">2dp</item>
        <item name="et_dividerPadding">4dp</item>
        <item name="et_dividerColor">@drawable/bg_edit_text</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_bit_smaller</item>
    </style>

    <style name="AppTheme.PrimaryButton" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorButtonPrimaryContrast</item>
        <!--<item name="rd_backgroundColor">@color/colorButtonPrimary</item>-->
    </style>

    <style name="AppTheme.TextView" />

    <style name="AppTheme.TextView.Comment">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/font_size_bit_smaller</item>
    </style>

    <style name="AppTheme.SimpleListItem">
        <item name="android:padding">@dimen/widget_margin</item>
    </style>

    <style name="AppTheme.SimpleListItemTitle">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.SimpleListItemDesc">
        <item name="android:textSize">@dimen/font_size_tiny</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.TextView.StepHeader">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/font_size_bit_larger</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">@dimen/widget_margin_half</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.PrimarySmallRoundedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/font_size_bit_smaller</item>
        <item name="android:background">@drawable/bg_small_rounded_button</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/colorButtonPrimaryContrast</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.StepNavigationButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="AppTheme.NextStepButton" parent="AppTheme.StepNavigationButton">
        <item name="android:src">@drawable/ic_navigate_before_white_24dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/bg_next_step</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="AppTheme.PreviousStepButton" parent="AppTheme.StepNavigationButton">
        <item name="android:src">@drawable/ic_navigate_next_white_24dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:background">@drawable/bg_prev_step</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="AppTheme.StickyListHeader">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="AppTheme.ListViewImageIcon">
        <item name="android:layout_width">@dimen/list_view_image_size</item>
        <item name="android:layout_height">@dimen/list_view_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorNeutralBlack</item>
    </style>

    <style name="AppTheme.ListViewImageIconZoomIn">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/ic_zoom_in_white_24dp</item>
    </style>

</resources>