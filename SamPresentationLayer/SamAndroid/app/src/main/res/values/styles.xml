<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorNeutral</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerToggle</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="AppTheme.DrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
        <item name="thickness">3dp</item>
    </style>

    <style name="AppTheme.ToolbarTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorNeutral</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="AppTheme.ToolbarTitle">
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.DrawerNavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AppTheme.DrawerNavigationViewHeader">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.LauncherActivityBack">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LauncherActivityLogo">
        <item name="android:src">@drawable/img_launcher_logo</item>
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.LauncherActivityTitle">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_size_xxlarge</item>
        <item name="android:layout_marginBottom">@dimen/widget_margin</item>
    </style>

    <style name="AppTheme.LauncherActivityTitleDesc">
        <item name="android:textColor">@color/colorNeutral</item>
        <item name="android:textSize">@dimen/font_size_bit_larger</item>
    </style>

    <style name="AppTheme.LauncherActivityFooter">
        <item name="android:textColor">@color/colorNeutral</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/container_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
