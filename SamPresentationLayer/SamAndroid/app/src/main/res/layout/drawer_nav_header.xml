<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.DrawerNavigationViewHeader"
    android:orientation="vertical">

    <ImageView style="@style/AppTheme.DrawerNavigationViewHeaderIcon" />

    <TextView
        style="@style/AppTheme.DrawerNavigationViewHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_title" />

    <TextView
        android:id="@+id/tv_user_fullname"
        style="@style/AppTheme.DrawerNavigationViewHeaderUserName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>