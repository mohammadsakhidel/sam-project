<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selectable_list_item"
    android:paddingTop="@dimen/widget_margin_half"
    android:paddingBottom="@dimen/widget_margin_half">

    <FrameLayout
        android:id="@+id/ly_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_icon"
            style="@style/AppTheme.ListViewRoundedImageIcon" />

        <ImageView
            style="@style/AppTheme.ListViewImageIconZoomIn"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ly_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_margin_half"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_margin_half"
            android:textSize="@dimen/font_size_small" />

    </LinearLayout>

</RelativeLayout>