@model SignInVM

<div class="page-content">

    <h2 class="step-title">
        @Strings.SignIn
    </h2>

    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="FullName" class="control-label">@Strings.UserName</label>
            <div>
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control inline" })
            </div>
        </div>
        <div class="form-group">
            <label for="FullName" class="control-label">@Strings.Password</label>
            <div>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control inline" })
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input id="RememberMe" name="RememberMe" type="checkbox"
                            @(Model != null && Model.RememberMe ? Html.Raw("checked=\"checked\"") : Html.Raw("")) />
                    <span>@Strings.RememberMe</span>
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success float">
                <span class="glyphicon glyphicon-ok"></span>
                @Strings.SignIn
            </button>
            <div class="clear"></div>
        </div>

        <div id="errors" class="text-danger">
            @Html.ValidationSummary()
        </div>
    }

</div>