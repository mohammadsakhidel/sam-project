<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/content/bootstrap")
        @Styles.Render("~/content/samthemes/defaulttheme/styles")

        @Scripts.Render("~/bundles/js/jquery")
        @Scripts.Render("~/bundles/js/jquery-ajax")
        @Scripts.Render("~/bundles/js/jquery-validate")
        @Scripts.Render("~/bundles/js/bootstrap")
        @RenderSection("head", false)
    </head>
    <body>
        <!--Navigation Bar-->
        <nav class="navbar">
            <div class="container">

                <div class="logo"></div>
                <div class="title">
                    <h1>@Strings.AppName</h1>
                    <h2>@Strings.AppDescription</h2>
                </div>

                <!--Collapse Button-->
                <button type="button" class="navbar-toggle visible-xs visible-sm hidden-md hidden-lg"
                        data-toggle="collapse" data-target="#navToCollapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!--Desktop Menu-->
                <div class="desktop-menu hidden-xs hidden-sm visible-md visible-lg">
                    <span>
                        <label class="glyphicon glyphicon-download-alt"></label>
                        <a>@Strings.DownloadApp</a>
                    </span>
                    <span>
                        <label class="glyphicon glyphicon-send"></label>
                        <a>@Strings.ContactUs</a>
                    </span>
                    <span>
                        <label class="glyphicon glyphicon-info-sign"></label>
                        <a>@Strings.MosqueBrowser</a>
                    </span>
                    <span>
                        <label class="glyphicon glyphicon-search"></label>
                        <a>@Strings.TrackConsolation</a>
                    </span>
                    <span>
                        <label class="glyphicon glyphicon-plus"></label>
                        @Html.ActionLink(@Strings.SendConsolation, "Create", "Consolations")
                    </span>
                </div>

            </div>
        </nav>
        <div class="clear"></div>

        <!--Collapsable Menu-->
        <div id="navToCollapse" class="mobile-menu container collapse hidden-md hidden-lg">
            <span>
                <label class="glyphicon glyphicon-plus"></label>
                @Html.ActionLink(@Strings.SendConsolation, "Create", "Consolations")
            </span>
            <span>
                <label class="glyphicon glyphicon-search"></label>
                <a>@Strings.TrackConsolation</a>
            </span>
            <span>
                <label class="glyphicon glyphicon-info-sign"></label>
                <a>@Strings.MosqueBrowser</a>
            </span>
            <span>
                <label class="glyphicon glyphicon-send"></label>
                <a>@Strings.ContactUs</a>
            </span>
            <span>
                <label class="glyphicon glyphicon-download-alt"></label>
                <a>@Strings.DownloadApp</a>
            </span>
        </div>

        <!--Body-->
        <div class="container main-body">
            @RenderBody()
        </div>

        <!--Footer-->
        <div class="container footer">
            @Strings.Footer
            &copy;
            @DateTime.Now.Year
        </div>
    </body>
</html>