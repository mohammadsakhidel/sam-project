<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/content/bootstrap")
        @Styles.Render("~/content/samthemes/defaulttheme/styles")

        @Scripts.Render("~/bundles/js/jquery")
        @Scripts.Render("~/bundles/js/jquery-ajax")
        @Scripts.Render("~/bundles/js/jquery-validate")
        @Scripts.Render("~/bundles/js/bootstrap")
        @RenderSection("head", false)
    </head>
    <body>
        <!--Navigation Bar-->
        <nav class="navbar">
            <div class="container">

                <div class="logo"></div>
                <div class="title">
                    <h1>@Strings.AppName</h1>
                    <h2>@Strings.AppDescription</h2>
                </div>

                <!--Collapse Button-->
                <button type="button" class="navbar-toggle"
                        data-toggle="collapse" data-target="#navToCollapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
        </nav>
        <div class="clear"></div>

        <!--Collapsable Menu-->
        <div id="navToCollapse" class="collapse">
        </div>

        <!--Body-->
        <div class="container main-body">
            @RenderBody()
        </div>
    </body>
</html>